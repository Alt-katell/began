<div class="topbar">
  <div class="chevron">
    <%= link_to category_path(@challenge.category) do %>
    <i class="fas fa-chevron-left"></i>
    <% end %>
  </div>

  <div class="topbar-title"><span class="my">MY</span> <%= @challenge.category.name.upcase %><span class="excla-mark">!</span></%></div>

  <div class="b-small-logo">
    <span class="logo-dot"></span>
    <span class="logo-b">b</span>
  </div>
</div>

<div class="container">
  <h1 class="head-title">CHALLENGE <%= @challenge.position %></h1>

  <h2 class="second-title"><%= @challenge.name.upcase %></h2>

  <% unless @challenge.is_quizz %>
  <div class="challenge-description">
    <p><%= @challenge.description %></p>
  </div>
  <% end %>

  <% unless @challenge.tips.empty? %>
    <h2 class="second-title">Tips</h2>

    <div class="challenge-tips">
      <div class="accordion" id="accordionExample">
        <% @challenge.tips.each_with_index do |tip, index|%>

        <!-- Wrote the css in _buttons.css. It can be errased if you want, no problem -->

          <div class="card accordion-card">
            <div class="card-header tip-name" id="heading<%= index %>">
              <h2 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse<%= index %>" aria-expanded="true" aria-controls="collapse<%= index %>">
                  <i class="fas fa-angle-down"></i> <%= tip.title %>
                </button>
              </h2>
            </div>

            <div id="collapse<%= index %>" class="collapse tip-info" aria-labelledby="headingOne" data-parent="#accordionExample">
              <div class="explanation">
                <%= tip.description %>
              </div>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  <% end %>


  <div class="challenge-links">


  <% if @challenge.is_quizz %>

    <div class="quizz-box">
  <% @questions.each_with_index do |question, q_index| %>
    <p id="<%= q_index %>-question"><strong><%= question.content %></strong></p>
    <div class="border-question"></div>
      <% question.answers.each do |answer| %>
        <% if answer.status %>
          <div class="answer">

            <div class="form-check">
              <input class="form-check-input" type="radio" id="radio_box1" value="option1">
              <label class="form-check-label" for="radio_box1">
                <%= link_to answer.content, question_question_completions_path(question), method: :post, remote: true, class: 'answer-option'%>
              </label>

            </div>


            <% if current_user.challenges.include?(question.challenge) %>
              <div class="explanation">
            <% else %>
              <div class="explanation d-none">
            <% end %>
              <%= answer.explanation %>
              <% if q_index + 1 == @questions.all.length %>
                <%# if @questions.all? { |question| question.users.include?(current_user) } || current_user.challenges.include?(@challenge) %>
                <%= link_to 'Finish', challenge_challenge_completions_path(@challenge), method: :post, class: "button-default d-none", id: 'real-finish' %>
                <%# else %>
                <p id="fake-finish">finish</p>
                <%# end %>
              <% else %>
                <!-- <a href="#<%= q_index + 1 %>-question">Next</a> -->
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="answer">
            <div class="form-check">
              <input class="form-check-input"  type="radio" id="radio_box2" value="option2">
              <label class="form-check-label" for="radio_box2">
              <a href="" class="answer-option"><%= answer.content %></a>
            </div>

            <div class="explanation d-none">
              <%= answer.explanation %>
            </div>
          </div>
        <% end %>
      <% end %>
      <hr>
  <% end %>
  </div>
</div>

<div>
  <%= link_to "Go back to the challenge", challenge_path(@challenge) %>
</div>

<% else %>

<div class="challenge-link">
      <% unless @challenge.recipes.empty? %>
      <div class="challenge-link">
        <%= link_to "Recipes", challenge_recipes_path(@challenge.id), class: "button-default"  %>
      </div>
      <% end %>
      <div class="challenge-link">
      <%= link_to 'Complete', challenge_challenge_completions_path(@challenge), method: :post, class: "button-complete" %>
    </div>
  <% end %>
</div>

</div>

</div>
