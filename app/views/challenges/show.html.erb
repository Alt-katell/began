<div class="topbar">
  <p class="chevron">
    <%= link_to choose_category_path do %>
    <i class="fas fa-chevron-left"></i>
    <% end %>
  </p>

  <p class="topbar-title"><span class="my">MY</span> <%= @challenge.category.name.upcase %><span class="excla-mark">!</span></%></p>
</div>

<div class="container">
  <h1>CHALLENGE <%= @challenge.id %></h1>

  <h2 class="challenge"><%= @challenge.name.upcase %></h2>

  <div class="challenge-description">
    <p><%= @challenge.description %></p>
  </div>

  <h2 class="challenge">Tips</h2>
  <div class="challenge-tips">
    <% @challenge.tips.each do |tip |%>
      <p><%= tip.title %></p>
      <p><%= tip.description %></p>
    <% end %>
  </div>


  <div class="challenge-links">

  <div class="challenge-link">
    <%= link_to "Recipes", challenge_recipes_path(@challenge.id), class:"btn btn-primary"  %>
  </div>
  <div class="challenge-link">
  <%= link_to "Quizz", challenge_questions_path(@challenge.id), class:"btn btn-primary"  %>
   </div>

  <div class="challenge-link">
  <% if current_user.challenges.include?(@challenge) %>
      <p>Completed <i class="fas fa-check"></i></p>
      <%= link_to 'Back to list', category_path(current_user.category_id) %>
    <% else %>
      <%= link_to 'Completed', challenge_challenge_completions_path(@challenge), method: :post,  class:"btn btn-primary"  %>
    <% end %>
   </div>
</div>

</div>

