<div class="topbar">
  <p class="chevron">
    <%= link_to category_path(@challenge.category) do %>
    <i class="fas fa-chevron-left"></i>
    <% end %>
  </p>

  <p class="topbar-title"><span class="my">MY</span> <%= @challenge.category.name.upcase %><span class="excla-mark">!</span></%></p>
</div>

<div class="container">
  <h1 class="head-title">CHALLENGE <%= @challenge.position %></h1>

  <h2 class="second-title"><%= @challenge.name.upcase %></h2>

  <div class="challenge-description">
    <p><%= @challenge.description %></p>
  </div>

  <h2 class="challenge">Tips</h2>
  <div class="challenge-tips">
    <% @challenge.tips.each do |tip |%>
      <p><%= tip.title %></p>
      <p><%= tip.description %></p>
    <% end %>
  </div>
  <div class="challenge-tip">
    <%= link_to "Read more", challenge_questions_path(@challenge.id) %>
  </div>


  <div class="challenge-links">

  <!-- <div class="challenge-link">
  </div> -->
  <% if @challenge.is_quizz %>
    <div class="challenge-link">
      <%= link_to "Quizz", challenge_questions_path(@challenge.id), class:"button-default"  %>
    </div>
  <% else %>
    <% unless @challenge.recipes.empty? %>
      <%= link_to "Recipes", challenge_recipes_path(@challenge.id), class:"button-default"  %>
    <% end %>
    <%= link_to 'Complete', challenge_challenge_completions_path(@challenge), method: :post, class: "button-default" %>
  <% end %>

  <!-- <div class="challenge-link">
  <% if @challenge.questions.all? { |question| current_user.questions.include?(question)} %>
      <%= link_to 'Mark as done', challenge_challenge_completions_path(@challenge), method: :post,  class:"button-complete"  %>
    <% else %>
      <p>Please complete the quizz</p>
    <% end %>
   </div> -->
</div>

</div>
