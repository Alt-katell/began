<div class="topbar">
  <div class="chevron">
    <%= link_to root_path do %>
    <i class="fas fa-chevron-left"></i>
    <% end %>
  </div>

  <div class="topbar-title">FORUM</div>

  <div class="b-small-logo">
    <span class="logo-dot"></span>
    <span class="logo-b">b</span>
  </div>
</div>

<div class="all_forum_page">
  <div class="post_part">
    <p><strong>
      Wright your feeling, sensation, appreciation
      <br>
      Share your advices to the others...
    </strong></p>

    <% if @posts.empty? %>
      <p>No posts for now... be the first to share something with the community !</p>
    <% else %>
      <% @posts.each do |post| %>
        <div>
          <p>
            <span style="font-size: small; color: gray;"><%= post.created_at.strftime("%d-%m") %></span>
            <%= post.content %>
            <span style="color: gray">~ <%= post.user.fullname %></span>

            <i class="fas fa-comments"></i><span>(<%= post.comments.count %>)</span>

            <% if post.user == current_user %>
              <%= link_to post_path(post), method: :delete do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            <% end %>
          </p>

            <div id="comments_display" class="d-none">
              <% post.comments.each do |comment| %>
                <%= comment.content %><span style="color: gray"><%= comment.user.fullname %></span>
              <% end %>
            </div>


            <div id="comment_form" class="d-none">
              <%= simple_form_for [post, @comment] do |f| %>
               <%= f.input :content %>
               <%= f.submit class: "btn btn-success"%>
              <% end %>
            </div>
        </div>
      <% end %>
    <% end %>

  </div>

  <div class="form_part">
    <p>Add a post !</p>
    <div class="post_form">
      <%= simple_form_for (@post) do |f| %>
        <%= f.input :content %>
        <%= f.submit class: "btn btn-success"%>
      <% end %>
    </div>
  </div>
</div>
